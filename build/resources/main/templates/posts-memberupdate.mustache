{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">사원 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="name">사원명</label>
                <input type="text" class="form-control" id="name" value="{{post.name}}" readonly>
            </div>
            <div class="form-group">
                <label for="date">입사 일자</label>
                <input type="text" class="form-control" id="date" value="{{post.date}}">
            </div>
            <div class="form-group">
                <label for="phNo">핸드폰 번호</label>
                <input type="text" class="form-control" id="phNo" value="{{post.phNo}}">
            </div>
            <div class="form-group">
                <label for="email">이메일 주소 </label>
                <input type="text" class="form-control" id="email" value="{{post.email}}" readonly>
            </div>
            <div class="form-group">
                <label for="personID">주민등록번호</label>
                <input type="text" class="form-control" id="personID" value="{{post.personID}}" readonly>
            </div>
            <div class="form-group">
                <label for="sex">성별</label>
                <input type="text" class="form-control" id="sex" value="{{post.sex}}">
            </div>
            <div class="form-group">
                <label for="zip">주소번호</label>
                <input type="text" class="form-control" id="zip" value="{{post.zip}}" readonly>
            </div>
            <div class="form-group">
                <label for="address">주소</label>
                <input type="text" class="form-control" id="address" value="{{post.address}}" readonly>
            </div>
            <div class="form-group">
                <label for="detailAddress">상세 주소</label>
                <input type="text" class="form-control" id="detailAddress" value="{{post.detailAddress}}">
            </div>
            <div class="form-group">
                <label for="password"> 비밀번호</label>
                <input type="password" class="form-control" id="password" value="{{post.password}}" readonly>
            </div>
            <div class="form-group">
                <label for="position">직종</label>
                <input type="text" class="form-control" id="position" value="{{post.position}}" readonly>
            </div>
            <div class="form-group">
                <label for="jobType">직금</label>
                <input type="text" class="form-control" id="jobType" value="{{post.jobType}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}